# -------------------------
# Application
# -------------------------
APP_ENV=pilot


# -------------------------
# Database
# -------------------------
# SQLite (Pilot / Local)
DATABASE_URL=sqlite+aiosqlite:///./alfa.db

# Example for Postgres (Production)
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/alfa


# -------------------------
# Security / JWT
# -------------------------
JWT_SECRET=CHANGE_ME_SUPER_SECRET_KEY
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440


# -------------------------
# OpenAI (AI Features)
# -------------------------
OPENAI_API_KEY=sk-REPLACE_WITH_REAL_KEY


# -------------------------
# Email Alerts (SMTP)
# -------------------------
SMTP_HOST=mail.example.com
SMTP_PORT=465
SMTP_USER=info@example.com
SMTP_PASSWORD=REPLACE_WITH_REAL_PASSWORD
ALERT_EMAIL_TO=admin@example.com


# -------------------------
# WhatsApp Alerts (Optional / Feature-Flagged)
# -------------------------
WHATSAPP_ENABLED=false
WHATSAPP_PROVIDER=twilio   # twilio | meta
WHATSAPP_TOKEN=REPLACE_WITH_PROVIDER_TOKEN
WHATSAPP_TO=+000000000000


# -------------------------
# Feature Flags (Optional)
# -------------------------
ENABLE_EMAIL_ALERTS=true
ENABLE_WHATSAPP_ALERTS=false


# -------------------------
# Logging
# -------------------------
LOG_LEVEL=INFO


# =========================================================
# End of file
# =========================================================
